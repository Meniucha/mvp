<mah:MetroWindow x:Class="vp.vpWindows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:usercontrols="clr-namespace:vp.UserControls"
        xmlns:local="clr-namespace:vp"
        xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        mc:Ignorable="d"
        Title="MainViewModelWindow" Height="450" Width="800"
        DataContext="{Binding Source={StaticResource Locator}, Path=MainViewModel}"
                 WindowStyle="SingleBorderWindow">

    <Window.ContextMenu>
        <ContextMenu>
            <MenuItem Header="Open Test Video" Command="{Binding Source={StaticResource Locator}, Path=MediaViewModel.OpenVideoCommand}"/>
        </ContextMenu>
    </Window.ContextMenu>

    <Grid>

        <TabControl>
            <TabItem Header="Player"
                 Visibility="Visible">
                <usercontrols:Media/>
            </TabItem>

            <TabItem Header="Playlists"
                 Visibility="Visible">
                <usercontrols:Playlists/>
            </TabItem>
        </TabControl>
    </Grid>
</mah:MetroWindow>
